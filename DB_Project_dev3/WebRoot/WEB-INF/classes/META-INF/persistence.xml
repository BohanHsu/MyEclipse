<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="SoccerGuruServiceHibernate"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>entity.Admin</class>
		<class>entity.City</class>
		<class>entity.Club</class>
		<class>entity.Enrollment</class>
		<class>entity.Hasposition</class>
		<class>entity.League</class>
		<class>entity.Match</class>
		<class>entity.Nation</class>
		<class>entity.Player</class>
		<class>entity.Playing</class>
		<class>entity.Playsin</class>
		<class>entity.Position</class>
		<class>entity.Round</class>
		<class>entity.Season</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="a" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://192.168.140.128:3306/db_group_proj1" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>

</persistence>
